{
  "name": "heirloom",
  "version": "0.0.1",
  "description": "A GUI for Legendary, an open-source alternative to the Epic Games Launcher.",
  "main": "index.js",
  "repository": "https://www.github.com/AutumnRivers/Heirloom",
  "author": "Autumn Rivers (natirivers@protonmail.ch)",
  "license": "GPL-3.0",
  "scripts": {
    "start": "electron ."
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "electron-store": "^6.0.1",
    "materialize-css": "^1.0.0",
    "node-fetch": "^2.6.1",
    "shelljs": "^0.8.4",
    "epicgames-status": "^1.0.3"
  },
  "devDependencies": {
    "electron-builder": "^22.9.1",
    "electron-rebuild": "^2.2.0",
    "electron": "^10.1.3"
  },
  "//": "You may need to install windows-build-tools to compile.",
  "build": {
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!**/raw",
      "!*.psd"
    ],
    "appId": "autumnrivers.heirloom",
    "copyright": "Copyright Â© 2020 Autumn Rivers",
    "productName": "Heirloom"
  },
  "win": {
    "icon": "./images/HeirloomIcon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "artifactName": "${productName} v${version} Installer.${ext}",
    "menuCategory": "Games"
  }
}
